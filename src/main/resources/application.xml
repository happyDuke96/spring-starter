<!--    WITH INDEX OR NAME AND TYPE CASE FOR -->
    <!-- SPel ~ Spring Expression Language #{} -->
    <!-- SPel ~ Simple Expression Language ${} -->
    <bean id="pool1" name="p1,p2" class="spring.starter.repository.pool.ConnectionPool" init-method="init" destroy-method="destroy">
        <constructor-arg index="0" type="java.lang.String" value="${db.username}"/>
        <constructor-arg index="3" type="java.util.Map">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="456"/>
                <entry key="driver" value-ref="driver"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="test2" value="#{driver.substring(3)}"/>
                <entry key="test3" value="#{driver.length() > T(Math).random() * 10}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="systemproperties" value="#{systemProperties['java.class.version']}"/>
            </map>
        </constructor-arg>
        <constructor-arg index="1" type="java.lang.Integer" value="${db.pool.size}"/>
        <constructor-arg index="2" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>

            </list>
        </constructor-arg>
    </bean>

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>

    <!--bind bean to depended bean AND WITH FACTORY METHOD INJECTION-->
    <bean id="companyRepository" class="spring.starter.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>


    <!--CustomBeanFactoryPostProcessor-->
